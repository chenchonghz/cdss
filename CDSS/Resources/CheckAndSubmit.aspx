<%@ Page Title="知识库审定" Language="C#" MasterPageFile="~/Resource.master" AutoEventWireup="true" CodeBehind="CheckAndSubmit.aspx.cs" Inherits="CDSS.CheckAndSubmit" %>
<asp:Content ID="Content1" ContentPlaceHolderID="ContentPlaceHolderResource" runat="server">
             <table style="width:100%;">
                 <tr>
                     <td style="height: 12px; width: 370px;">
                         <asp:RadioButtonList ID="RadioButtonListKnowledge" runat="server" AutoPostBack="True" OnSelectedIndexChanged="RadioButtonListKnowledge_SelectedIndexChanged" RepeatDirection="Horizontal">
                             <asp:ListItem Selected="True">症候知识库</asp:ListItem>
                             <asp:ListItem>疾病知识库</asp:ListItem>
                         </asp:RadioButtonList>
                     </td>
                     <td style="font-size: medium; font-weight: bold; height: 12px; width: 2px;">&nbsp;</td>
                     <td style="font-size: medium; font-weight: bold; height: 12px; width: 331px;">
                         <asp:Literal ID="LiteralKnowledgeInfo" runat="server" Text="知识库信息"></asp:Literal>
                     </td>
                     <td style="font-size: medium; font-weight: bold; height: 12px; width: 2px;">&nbsp;</td>
                 </tr>
        <tr>
            <td style="width: 370px; vertical-align: top; height: 357px;">
                <asp:GridView ID="GridViewKnowledge" runat="server" CellPadding="4" ForeColor="#333333" GridLines="None" Width="352px" AutoGenerateColumns="False" AllowPaging="True" OnPageIndexChanging="GridViewKnowledge_PageIndexChanging" PageSize="20" AutoGenerateSelectButton="True" OnSelectedIndexChanged="GridViewKnowledge_SelectedIndexChanged">
                    <AlternatingRowStyle BackColor="White" ForeColor="#284775" />
                    <Columns>
                        <asp:BoundField DataField="ChineseName" HeaderText="中文名称" SortExpression="ChinesesName" />
                        <asp:BoundField DataField="CreatorName" HeaderText="创建者" SortExpression="CreatorName" />
                    </Columns>
                    <EditRowStyle BackColor="#999999" />
                    <FooterStyle BackColor="#5D7B9D" Font-Bold="True" ForeColor="White" />
                    <HeaderStyle BackColor="#5D7B9D" Font-Bold="True" ForeColor="White" HorizontalAlign="Center" VerticalAlign="Middle" />
                    <PagerStyle BackColor="#284775" ForeColor="White" HorizontalAlign="Center" />
                    <RowStyle BackColor="#F7F6F3" ForeColor="#333333" HorizontalAlign="Left" VerticalAlign="Middle" />
                    <SelectedRowStyle BackColor="#E2DED6" Font-Bold="True" ForeColor="#333333" />
                    <SortedAscendingCellStyle BackColor="#E9E7E2" />
                    <SortedAscendingHeaderStyle BackColor="#506C8C" />
                    <SortedDescendingCellStyle BackColor="#FFFDF8" />
                    <SortedDescendingHeaderStyle BackColor="#6F8DAE" />
                </asp:GridView>
            </td>
            <td vertical-align: top; style="height: 357px; width: 2px;">
            </td>
            <td vertical-align: top; style="height: 357px; width: 331px;">
                <asp:Panel ID="PanelKnowledge" runat="server" ScrollBars="Auto" Direction="LeftToRight" HorizontalAlign="Left" Height="418px" Width="509px" >
                    <asp:TreeView Style="line-height: 50%" ID="TreeViewKnowledge" runat="server" AutoGenerateDataBindings="False" Font-Size="Small" LineImagesFolder="~/TreeLineImages" ShowLines="True">
                        <SelectedNodeStyle BackColor="Yellow" ForeColor="Red" />
                    </asp:TreeView>
                    </asp:Panel>
            </td>
            <td vertical-align: top; style="height: 357px">
                &nbsp;</td>
        </tr>
                 <tr>
                     <td style="width: 370px; text-align: left;">
                         <asp:RadioButtonList ID="RadioButtonListType" runat="server" RepeatDirection="Horizontal" OnSelectedIndexChanged="RadioButtonListType_SelectedIndexChanged" AutoPostBack="True" RepeatLayout="Flow">
                             <asp:ListItem Selected="True">提交审核</asp:ListItem>
                             <asp:ListItem>正在审核</asp:ListItem>
                             <asp:ListItem>完成审核</asp:ListItem>
                             <asp:ListItem>所有项目</asp:ListItem>
                         </asp:RadioButtonList>
                     </td>
                     <td style="width: 2px">&nbsp;</td>
                     <td style="width: 331px">
                         <asp:Button ID="ButtonNeedRemodify" runat="server" Text="需要重新修改" Width="176px" OnClick="ButtonNeedRemodify_Click" />
                         <asp:Button ID="ButtonSubmit" runat="server" Text="通过审核并提交" Width="132px" OnClick="ButtonSubmit_Click" />
                     </td>
                     <td>&nbsp;</td>
                 </tr>
                 <tr>
                     <td style="width: 370px">
                         <asp:SqlDataSource ID="SqlDataSourceDiseaseKnowledge" runat="server" ConnectionString="<%$ ConnectionStrings:CDSSConnectionString %>" SelectCommand="SELECT [ChineseName], [EnglishName], [CreatorName], [CreateTime] FROM [DiseasesBase] ORDER BY [CreateTime] DESC"></asp:SqlDataSource>
                     </td>
                     <td style="width: 2px">&nbsp;</td>
                     <td style="width: 331px">&nbsp;</td>
                     <td>&nbsp;</td>
                 </tr>
    </table>
</asp:Content>
